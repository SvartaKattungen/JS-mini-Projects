//FUNCTION 1
const colorMessage =(favoriteColor, shirtColor)=>{
  if (favoriteColor === shirtColor){
    return 'The shirt is your favorite color!'}
  else {
    return 'That is a nice color.'
    }
  }
console.log(colorMessage('blue','blue'))
console.log(colorMessage('blue','green'))



//FUNCTION 2
//The function should return true if the number is even and false if the number is odd.
const isEven = number => number %2 == 0
console.log(isEven(5)) //false
console.log(isEven(6)) //true



//FUNCTION 3
const numberDigits = x => {
  if (x >= 0 && x < 10) {
    return `One digit: ${x}`
  }
   else if (x >= 0 && x < 100) {
    return `Two digits: ${x}`
  }
   else {
    return `The number is: ${x}`
  }
}
console.log(numberDigits(5)) //prints: One digit: 5
console.log(numberDigits(15)) //prints: Two digits: 15
console.log(numberDigits(155)) //prints: The number is: 155
console.log(numberDigits(-5)) //prints: The number is: -5




